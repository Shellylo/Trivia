<Window x:Class="TriviaClient.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="ResultsWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.6*"/>
            <RowDefinition Height="5.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Game Over" Foreground="Crimson" FontSize="35"/>
        <ScrollViewer Grid.ColumnSpan="3" Grid.Row="1">
            <StackPanel Name="Scores"/>
        </ScrollViewer>
        <Button Name="Leave" Grid.Row="6" Width="80" Height="30" Content="Leave" FontSize="15" Foreground="Crimson" BorderThickness="0" Click="Leave_Click"/>
    </Grid>
</Window>
