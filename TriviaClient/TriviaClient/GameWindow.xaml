<Window x:Class="TriviaClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="GameWindow" Height="350" Width="525"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Name="Question" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Crimson" FontSize="20"/>
        <TextBox Name="Time" Grid.Column="1" Grid.Row="1" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Crimson"/>
        <StackPanel Name="Answers" Grid.Column ="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <Button Name="Leave" Grid.Row="3" Width="80" Height="30" Content="Leave" FontSize="15" Foreground="Crimson" BorderThickness="0" Click="Leave_Click"/>
    </Grid>
</Window>
