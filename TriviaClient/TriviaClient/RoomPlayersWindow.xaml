<Window x:Class="TriviaClient.RoomPlayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="RoomPlayersWindow" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="RoomName" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Crimson" FontSize="30"/>
        <ScrollViewer Grid.Row="1">
            <StackPanel Name="Players"/>
        </ScrollViewer>
        <Button Grid.Row="2" Width="120" Height="30" Content="Ok" Foreground="Crimson" FontSize="15" BorderThickness="0" Click="Button_Click"/>
    </Grid>
</Window>
